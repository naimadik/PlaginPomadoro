{
  "name": "pomodoro-anti-procrastination",
  "displayName": "üçÖ Pomodoro Anti-Procrastination",
  "description": "Pomodoro timer with website blocking for MacOS",
  "version": "1.0.0",
  "engines": {"vscode": "^1.60.0"},
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pomodoro.start",
        "title": "Start Pomodoro (25/5)",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.startCustom", 
        "title": "Start Custom Pomodoro",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.stop", 
        "title": "Stop Pomodoro",
        "category": "Pomodoro"
      }
    ],
    "keybindings": [
      {
        "command": "pomodoro.start",
        "key": "ctrl+cmd+p",
        "mac": "ctrl+cmd+p"
      }
    ],
    "configuration": {
      "title": "Pomodoro",
      "properties": {
        "pomodoro.workTime": {
          "type": "number",
          "default": 25,
          "description": "Default work time in minutes"
        },
        "pomodoro.breakTime": {
          "type": "number", 
          "default": 5,
          "description": "Default break time in minutes"
        },
        "pomodoro.blockedSites": {
          "type": "array",
          "default": ["youtube.com", "facebook.com", "instagram.com", "twitter.com", "reddit.com"],
          "description": "Websites to block during focus time"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc extension.ts --outDir .",
    "watch": "tsc -w extension.ts --outDir ."
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "typescript": "^4.9.4"
  }
}