{
  "name": "pomodoro-anti-procrastination",
  "displayName": "üçÖ Pomodoro Anti-Procrastination",
  "description": "Pomodoro timer with website blocking for MacOS",
  "version": "1.0.0",
  "engines": {"vscode": "^1.60.0"},
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:pomodoro.start",
    "onCommand:pomodoro.startCustom", 
    "onCommand:pomodoro.quickStart",
    "onCommand:pomodoro.stop",
    "onCommand:pomodoro.testMonitor",
    "onCommand:pomodoro.forceCloseTabs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pomodoro.start",
        "title": "Start Pomodoro (25/5)",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.startCustom", 
        "title": "Start Custom Pomodoro",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.quickStart", 
        "title": "Quick Start Pomodoro",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.stop", 
        "title": "Stop Pomodoro",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.testMonitor",
        "title": "Test Website Monitoring",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.forceCloseTabs",
        "title": "Force Close Distracting Tabs",
        "category": "Pomodoro"
      }
    ],
    "keybindings": [
      {
        "command": "pomodoro.quickStart",
        "key": "cmd+shift+8",
        "mac": "cmd+shift+8"
      }
    ],
    "configuration": {
      "title": "Pomodoro",
      "properties": {
        "pomodoro.workTime": {
          "type": "number",
          "default": 25,
          "description": "Default work time in minutes"
        },
        "pomodoro.breakTime": {
          "type": "number", 
          "default": 5,
          "description": "Default break time in minutes"
        },
        "pomodoro.blockedSites": {
          "type": "array",
          "default": [
            "youtube",
            "twitch",
            "vk",
            "vkontakte",
            "reddit",
            "instagram",
            "tiktok",
            "facebook",
            "netflix",
            "twitter",
            "x.com"
          ],
          "description": "Websites to block during focus time (used as keywords in tab titles/URLs)"
        },
        "pomodoro.enableStrictMode": {
          "type": "boolean",
          "default": true,
          "description": "Enable strict website blocking mode"
        },
        "pomodoro.autoCloseTabs": {
          "type": "boolean",
          "default": false,
          "description": "Automatically close distracting tabs (requires permissions)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}